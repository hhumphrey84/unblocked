{
    "name": "UnBlocked",
    "version": "1.0.0",
    "private": true,
    "description": "UnBlock your first quilt",
    "author": "Helen Humphrey",
    "scripts": {
        "build": "nuxt build",
        "commit": "git cz",
        "precommit": "npm run lint && npm run test",
        "dev": "cross-env NODE_ENV=development nodemon server/index.js --watch server",
        "generate": "nuxt generate",
        "lint": "npm run lint:js && npm run lint:ts && npm run lint:css",
        "lint:js": "eslint ./client",
        "lint:ts": "tslint --project tsconfig.json -c tslint.json './client/**/*.ts'",
        "lint:css": "stylelint \"./client/**/*.css\"",
        "start": "cross-env NODE_ENV=production node server/index.js",
        "test": "jest .",
        "test:cypress": "start-server-and-test dev http-get://localhost:3000 cypress:run",
        "cypress:open": "cypress open",
        "cypress:run": "cypress run"
    },
    "jest": {
        "collectCoverage": true,
        "collectCoverageFrom": [
            "<rootDir>/client/components/**/*.vue",
            "<rootDir>/client/features/**/*.vue",
            "<rootDir>/client/features/**/*.ts",
            "<rootDir>/client/pages/*.vue"
        ],
        "moduleFileExtensions": [
            "js",
            "json",
            "vue",
            "ts"
        ],
        "moduleNameMapper": {
            "^~/(.*)$": "<rootDir>/client/$1",
            "^~~/(.*)$": "<rootDir>/client/$1"
        },
        "snapshotSerializers": [
            "jest-serializer-vue"
        ],
        "transform": {
            "^.+\\.js$": "babel-jest",
            ".*\\.(vue)$": "vue-jest",
            "^.+\\.tsx?$": "ts-jest"
        },
        "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(ts|js)?$"
    },
    "dependencies": {
        "cross-env": "^5.2.0",
        "micro": "^9.3.3",
        "micro-route": "^2.5.0",
        "nuxt": "^2.0.0"
    },
    "devDependencies": {
        "@babel/core": "^7.1.2",
        "@types/jest": "^23.3.7",
        "@vue/test-utils": "^1.0.0-beta.25",
        "babel-core": "^7.0.0-bridge.0",
        "babel-eslint": "^8.2.1",
        "babel-jest": "^23.6.0",
        "cypress": "^3.1.0",
        "eslint": "^5.0.1",
        "eslint-loader": "^2.0.0",
        "eslint-plugin-vue": "^4.0.0",
        "jest": "^23.6.0",
        "jest-serializer-vue": "^2.0.2",
        "nodemon": "^1.11.0",
        "postcss-custom-media": "^7.0.7",
        "postcss-mixins": "^6.2.0",
        "postcss-nested": "^4.1.0",
        "start-server-and-test": "^1.7.4",
        "stylelint": "^9.6.0",
        "stylelint-order": "^1.0.0",
        "ts-jest": "^23.10.4",
        "ts-loader": "^5.2.2",
        "tslint": "^5.11.0",
        "tslint-eslint-rules": "^5.4.0",
        "typescript": "^3.1.3",
        "vue-jest": "^2.6.0"
    }
}
