{
    "linterOptions": {
        "exclude": [
            "node_modules/**/*.ts"
        ]
    },
    "defaultSeverity": "error",
    "extends": [
        "tslint:recommended",
        "tslint-eslint-rules"
    ],
    "rules": {
        "arrow-parens": [
            true,
            "ban-single-arg-parens"
        ],
        "newline-before-return": true,
        "no-shadowed-variable": false,
        "no-console": [
            true,
            "log"
        ],
        "object-curly-spacing": ["error", "always"],
        "ordered-imports": false,
        "quotemark": [
            true,
            "single"
        ],
        "trailing-comma": [
            false,
            {
                "multiline": "always",
                "singleline": "never"
            }
        ]
    }
}
